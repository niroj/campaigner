<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table class='col-sm-12'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Completed</th>
      <th>Completed by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.creator.try(:email) %></td>
        <td><%= todo.completed %></td>
        <td><%= todo.completed_by.try(:email) %></td>
        <td><%= link_to 'Show', [@campaign, todo] %></td>
        <td><%= link_to 'Edit', edit_campaign_todo_path(@campaign, todo) %></td>
        <td><%= link_to 'Destroy', [@campaign, todo], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
