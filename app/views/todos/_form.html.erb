<%= form_with(model: todo, url: [campaign, todo], remote: remote, local: !remote, class: 'todo-form') do |form| %>
  <div class="input-group">
    <%= form.text_field :title, id: :todo_title, class: 'form-control', placeholder: 'Add Todo...' %>
    <span class="input-group-btn">
      <%= form.submit class: 'btn btn-primary', data: {disable_with: 'Adding...'} %>
    </span>
  </div>
<% end %>
